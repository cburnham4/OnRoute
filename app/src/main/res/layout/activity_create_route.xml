<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Activity_CreateRoute"
    >

    <include layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/auto_picker_padding"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/btn_createRoute"
        android:id="@+id/scroll_destinations">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin_destinations">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_start"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/auto_picker_margin">

                <AutoCompleteTextView
                    android:id="@+id/auto_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/auto_picker_padding"
                    android:background="@android:color/transparent"
                    android:hint="Choose a starting point..."

                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_waypoint1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/auto_picker_margin"
                android:visibility="gone"
                >

                <AutoCompleteTextView
                    android:id="@+id/auto_waypoint1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/auto_picker_padding"
                    android:background="@android:color/transparent"
                    android:hint="Choose a waypoint..."

                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_waypoint2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/auto_picker_margin"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/auto_waypoint2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/auto_picker_padding"
                    android:background="@android:color/transparent"
                    android:hint="Choose a waypoint..."

                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_waypoint3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/auto_picker_margin"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/auto_waypoint3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/auto_picker_padding"
                    android:background="@android:color/transparent"
                    android:hint="Choose a waypoint..."

                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cardview_waypoint4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/auto_picker_margin"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/auto_waypoint4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/auto_picker_padding"
                    android:background="@android:color/transparent"
                    android:hint="Choose a waypoint..."

                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cardview_waypoint5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/auto_picker_margin"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/auto_waypoint5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/auto_picker_padding"
                    android:background="@android:color/transparent"
                    android:hint="Choose a waypoint..."

                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview2_destination"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/auto_picker_margin">

                <AutoCompleteTextView
                    android:id="@+id/auto_destination"
                    android:layout_width="match_parent"
                    android:padding="@dimen/auto_picker_padding"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Choose a destination..." />

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Route"
        android:id="@+id/btn_createRoute"
        android:layout_above="@+id/tv_google_copy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Powered by Google"
        android:id="@+id/tv_google_copy"
        android:layout_alignParentBottom="true" />


</RelativeLayout>